@model JensBankWebApp.ViewModels.DepositWithdrawViewModel

@{
	ViewData["Title"] = "Deposit/Withdraw";
}

<h2>Deposit/Withdraw</h2>
<br />
<br />

<form asp-controller="Account" asp-action="DepositWithdraw" method="post">
	<div class="input-group">
		<span class="input-group-addon">Account No</span>
		<input type="text" asp-for="AccountNo" class="form-control" placeholder="Input account no">
	</div>
	<div class="input-group btn-group">
		<span class="input-group-addon">Amount SEK</span>
		<input type="text" asp-for="Amount" class="form-control" placeholder="Input amount in SEK">
	</div>
	<br />
	<div class="btn-group">
		<input class="btn btn-success" asp-route-choice="1" type="submit" value="Deposit" />
		<input class="btn btn-info" asp-route-choice="2" type="submit" value="Withdraw" />
	</div>
</form>
@if (Model.Message != null)
{
	<hr />
	<div>
		<h4 class="text-danger">@Model.Message</h4>
	</div>
	if (Model.Account != null)
	{
	<form class="form-horizontal">
		<div class="form-group">
			<label class="control-label col-sm-2">Account no:</label>
			<div class="col-sm-10">
				<p class="form-control-static">@Model.Account.Id</p>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2">New balance:</label>
			<div class="col-sm-10">
				<p class="form-control-static">@Model.Account.Amount SEK</p>
			</div>
		</div>
	</form>
	}
}