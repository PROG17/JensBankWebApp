@model JensBankWebApp.ViewModels.TransferViewModel


<h2>Transfer money from Origin to Destination Account</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Transfer" asp-action="MakeAMoneyTransfer" method="post">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="OriginAccountId" class="control-label"></label>
                <input asp-for="OriginAccountId" class="form-control" />
                <span asp-validation-for="OriginAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationAccountId" class="control-label"></label>
                <input asp-for="DestinationAccountId" class="form-control" />
                <span asp-validation-for="DestinationAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransferAmount" class="control-label"></label>
                <input asp-for="TransferAmount" class="form-control" />
                <span asp-validation-for="TransferAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Transfer money" class="btn btn-primary" />
            </div>

            <div class="form-group">
                @if (Model.IsError)
                {
                    <div class="bg-danger text-white">
                        @Model.Message
                    </div>
                }
                else
                {
                    <div class="bg-success text-white">
                        @Model.Message
                    </div>
                }

            </div>

        </form>
    </div>
</div>

<hr />

<div class="row">
    @if (!Model.IsError && Model.Message != null)
    {
        <div class="col-4">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-2">Account no:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.OriginAccountId</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">New balance:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.OriginNewAmount SEK</p>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-4">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-2">Account no:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.DestinationAccountId</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">New balance:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.DestinationNewAmount SEK</p>
                    </div>
                </div>
            </form>
        </div>
    }
</div>




<div>
    <a asp-controller="Home" asp-action="Index">Back to Customer List</a>
</div>

